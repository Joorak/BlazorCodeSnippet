@page "/SSR-Static"

<h3>SSR - Static</h3>

<p>
    The Count is: @count
</p>
<hr class="mt-5 w-100" />
<p><i class="fas fa-check-circle fs-3 text-success"></i> Scale</p>
<p><i class="fas fa-check-circle fs-3 text-success"></i> presenting Information</p>
<p><i class="fas fa-check-circle fs-3 text-success"></i> Navigation(Links)</p>
<p><i class="fas fa-check-circle fs-3 text-success"></i> Forms</p>
<p><i class="fas fa-times-circle fs-3 text-danger"></i> Rich Interactivity</p>
<p><i class="fas fa-times-circle fs-3 text-danger"></i> Real-time updates</p>
@code {
        int? count;

    protected override async Task OnInitializedAsync()
    {
        count = 0;
        for (int i = 0; i < 5; i++)
        {
            await Task.Delay(1000);
            count++;
            StateHasChanged();
        }
    }
    
}